<div class='header'>
  <div class="flex-container">
    <div class="header__content">
      <%= link_to "На главную", travels_path, class:'address' %>
      <%= link_to "Поиск",search_travels_path, class:'address' %>
      <%= link_to "Создать",new_travel_path, class:'address' %>
      <%= link_to "Мой профиль",user_index_path, class:'address'%>
    </div>
  </div>

</div>
<div class="body">
  <%= link_to "Редактировать профиль", edit_user_registration_path, class: 'show_profile' %>
  <h1>Travels</h1>
  <div class="flex-container">
    <div class="body__content">
      <div id="travels">
        <% @travels.each do |travel| %>
          <%= render travel %>
          <p>
            <%= link_to "Show this travel", travel %>
          </p>
          <div class="edit__travel">
            <%= link_to "Edit this travel", edit_travel_path(travel), class:"change-button" %> |


            <%= button_to "Destroy this travel", travel, method: :delete, class:'change-button' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>