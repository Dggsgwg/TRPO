<div class='header'>
  <div class="flex-container">
    <div class="header__content">
      <%= link_to "На главную", travels_path, class:'address' %>
      <%= link_to "Поиск",search_travels_path, class:'address' %>
      <%= link_to "Создать",new_travel_path, class:'address' %>
      <%= link_to "Мой профиль",user_index_path, class:'address'%>
      <%= link_to "Админ панель",:admin_panel, class:'address'%>
    </div>
  </div>

</div>
<div class="body">
  <h1>Travels</h1>
  <div class="flex-container">
    <div class="body__content">
      <div id="travels">
        <% @travels.each do |travel| %>
          <%= render travel %>
          <p>
            <%= link_to "Show this travel", travel %>
          </p>
        <% end %>
      </div>

    </div>
  </div>
</div>
